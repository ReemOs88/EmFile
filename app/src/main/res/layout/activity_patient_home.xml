<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".patient.PatientHome">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="EM-File"
        android:background="@color/main_color"
        app:menu="@menu/top_app_bar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        />
        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/file3"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Patient profile"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/second_color"
            android:layout_gravity="center"/>


  <com.google.android.material.button.MaterialButton
      android:layout_width="match_parent"
      android:layout_marginStart="@dimen/_30sdp"
      android:layout_marginEnd="@dimen/_30sdp"
      android:layout_marginTop="@dimen/_30sdp"
      android:backgroundTint="@color/main_color"
      android:text="Medical Report"
      android:onClick="medicalReport"
      android:textAllCaps="false"
      android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
       android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:backgroundTint="@color/main_color"
        android:onClick="bookAppointment"
        android:text="Book an appointment"
        android:textAllCaps="false"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:backgroundTint="@color/main_color"
        android:onClick="vaccination"
        android:text="Vaccination dates"
        android:textAllCaps="false"
        android:layout_height="wrap_content"/>

</LinearLayout>